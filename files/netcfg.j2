CONNECTION='ethernet'
DESCRIPTION='main'
INTERFACE='eth0'
HOSTNAME='{{ inventory_hostname }}'
IP='static'
IPCFG=(
{% for ip in v4addr %}
'addr add dev eth0 {{ ip }} brd +'
{% endfor %}
'route add default via {{ v4gw }}'
)
IP6='static'
ADDR6=(
{% for ip in v6addr %}
'{{ ip }}'
{% endfor %}
)
GATEWAY6='{{ v6gw }}'

