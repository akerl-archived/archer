#import linode.api

def main():
  module = AnsibleModule(
            argument_spec = dict(
              username      = dict(default=''),
              password      = dict(default=''),
              apikey        = dict(default=''),
              method        = dict(required=True),
              name          = dict(default='')
            )
          )
  params = module.params
  module.exit_json(changed=False, monkey='cat',ansible_facts={'hello':'world'})

# this is magic, see lib/ansible/module_common.py
#<<INCLUDE_ANSIBLE_MODULE_COMMON>>

main()

